<body style="background-color: grey;">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand" href="#">
            <h1 style="font-family: 'Sans-serif';">Enter the details of new member</h1>
        </a>
    </nav>

    <div style="color: azure;">
        <form action="/display" method="POST" name="adding_details">
            <div style="
            display:flex;
            flex-direction:column;
            justify-content: space-around;
            align-items: center;
            width: 100%;
            padding-top:30px;
            ">
                <div class="form-group" style="padding-right:20px; ">
                    <label for="exampleFormControlInput1">Currently working Project Name</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1"
                    name ="S20200010091projectname" placeholder="Enter project name">
                </div>
                <div class="form-group" style="padding-right:20px; ">
                    <label for="exampleFormControlInput1">Roll Number</label>
                    <input type="text" name ="S20200010091rollno" class="form-control" id="exampleFormControlInput1"
                        placeholder="Enter Roll Number">
                </div>
                <div class="form-group" style="padding-right:20px;">
                    <label for="exampleFormControlSelect1">Semester</label>
                    <select class="form-control" name ="S20200010091semster" id="exampleFormControlSelect1">
                        <option>Select your semester</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                    </select>
                </div>
                <div class="form-group" style="padding-right:20px;">
                    <label for="exampleFormControlTextarea1">Project Details</label>
                    <textarea class="form-control" name ="S20200010091projectdetails" id="exampleFormControlTextarea1" rows="2" placeholder="Enter project details"></textarea>
                </div>
                <div class="form-group" style="padding-right:20px; ">
                    <label for="exampleFormControlInput1">Technology</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1"
                    name ="S20200010091technology" placeholder="Enter technologies used">
                </div>
            </div>
                <div style="
                display:flex;
                flex-direction:row;
                justify-content: space-around;
                ">
                <button type="submit" class="btn btn-dark">Submit</button> 
                </div>


        </form>
